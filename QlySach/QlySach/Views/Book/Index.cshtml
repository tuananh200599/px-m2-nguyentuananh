
@model IEnumerable<Book>

<div>
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Book List</h2>
        </div>

        <div class="col-6">
            <a asp-controller="Book" asp-action="Create" class="btn btn-primary">
                Create New Book
            </a>
        </div>
    </div>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>

                    <th>
                        Name
                    </th>
                    <th>
                        Author
                    </th>
                    <th>
                        ShortContent
                    </th>
                    <th>
                        PublicYear
                    </th>
                    <th>
                        Amount
                    </th>
                    <th>
                       CategoryName
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model)
                {
                <tr>

                    <td width="20%">
                        @book.Name
                    </td>
                    <td width="20%">
                        @book.Author
                    </td>
                    <td width="20%">
                        @book.ShortContent
                    </td>
                    <td width="10%">
                        @book.PublicYear
                    </td>
                    <td width="10%">
                        @book.Amount
                    </td>
                    <td width="20%">
                        @book.Category.CategoryName
                    </td>
                    <td>
                        <div>
                            <a asp-controller="Book" asp-action="Delete" asp-route-Id="@book.Id" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table> }
    else
    {
        <p>Không tồn tại thể loại trong database</p>}


</div>


